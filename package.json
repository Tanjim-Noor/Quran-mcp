{
  "name": "quran-mcp",
  "version": "0.0.1",
  "description": "A Model Context Protocol (MCP) server providing access to the Quran Foundation API with GitHub OAuth authentication. Query Quranic verses, translations, tafsir, and word analysis through natural language.",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Tanjim-Noor/Quran-mcp.git"
  },
  "keywords": [
    "quran",
    "quran-api",
    "mcp",
    "model-context-protocol",
    "oauth",
    "github",
    "cloudflare-workers",
    "tafsir",
    "islamic",
    "quranic",
    "translation",
    "quran-foundation",
    "ai",
    "nlp"
  ],
  "author": "Quran MCP Contributors",
  "bugs": {
    "url": "https://github.com/Tanjim-Noor/Quran-mcp/issues"
  },
  "homepage": "https://github.com/Tanjim-Noor/Quran-mcp#readme",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "type-check": "tsc --noEmit",
    "test:sdk": "tsx src/quran/test.ts",
    "test:sdk:raw": "tsx src/quran/test_raw.ts",
    "test:sdk:resources": "tsx src/quran/test_resources.ts",
    "test:sdk:tafsir": "tsx src/quran/test_tafsir.ts",
    "test:sdk:chapter": "tsx src/quran/test_chapter.ts",
    "test:sdk:translations": "tsx src/quran/test_translations.ts"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.13",
    "@modelcontextprotocol/sdk": "1.20.2",
    "@quranjs/api": "^2.0.0",
    "agents": "^0.2.19",
    "hono": "^4.10.4",
    "just-pick": "^4.2.0",
    "octokit": "^5.0.4",
    "workers-mcp": "^0.0.13",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "wrangler": "^4.45.3"
  }
}